<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View style="@style/line" />

    <LinearLayout
        android:id="@+id/menu_group"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/menu_home_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="onClick">

            <RadioButton
                android:id="@+id/menu_home"
                style="@style/main_tab_bottom"
                android:checked="true"
                android:drawableTop="@drawable/selector_menu_home"
                android:text="发现"
                android:textColor="#333333" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_sketch_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="onClick">

            <RadioButton
                android:id="@+id/menu_sketch"
                style="@style/main_tab_bottom"
                android:drawableTop="@drawable/selector_menu_sketch"
                android:text="绘图"
                android:textColor="#888888" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_excel_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="onClick">

            <RadioButton
                android:id="@+id/menu_excel"
                style="@style/main_tab_bottom"
                android:drawableTop="@drawable/selector_menu_excel"
                android:text="记录"
                android:textColor="#888888" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_more_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="onClick">

            <RadioButton
                android:id="@+id/menu_more"
                style="@style/main_tab_bottom"
                android:drawableTop="@drawable/selector_menu_more"
                android:text="更多"
                android:textColor="#888888" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
